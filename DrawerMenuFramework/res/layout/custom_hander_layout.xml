<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/hander_background">

    <ImageView
        android:id="@+id/custom_hander_left_image"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scaleType="centerInside"
        android:src="@mipmap/icon_back" />

    <TextView
        android:id="@+id/custom_hander_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/hander_text_color"
        android:textSize="@dimen/hander_text_size" />

    <TextView
        android:id="@+id/custom_hander_right_textView"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/hander_text_color"
        android:textSize="@dimen/hander_text_size" />

</RelativeLayout>