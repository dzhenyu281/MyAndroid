<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="15dp"
    android:paddingBottom="10dp"
    android:background="@color/control_bar_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:id="@+id/play_time" />
        <SeekBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/play_time"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:thumb="@drawable/ic_seekbar_thumb"
            android:progressDrawable="@color/content_background_theme"
            android:thumbOffset="0dp"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:id="@+id/play_progress"
            android:max="100"
            android:progress="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="14sp"
            android:id="@+id/play_music_time"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">

        <ImageButton
            android:id="@+id/btn_play_type"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bt_play_order_type"
            android:background="#00000000"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/btn_play_previous"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:layout_toLeftOf="@+id/btn_play_pause"
                android:layout_marginRight="30dp"
                android:src="@drawable/bt_play_previous"
                android:background="#00000000"/>
            <ImageButton
                android:id="@+id/btn_play_pause"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/bt_pause"
                android:background="#00000000"/>
            <ImageButton
                android:id="@+id/btn_play_next"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:layout_toRightOf="@+id/btn_play_pause"
                android:layout_marginLeft="30dp"
                android:background="#00000000"
                android:src="@drawable/bt_play_next"/>
        </RelativeLayout>
        <ImageButton
            android:id="@+id/btn_play_lsit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:background="#00000000"
            android:src="@drawable/bt_show_paly_list"/>
    </LinearLayout>

</LinearLayout>